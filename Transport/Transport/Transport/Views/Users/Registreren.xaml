<?xml version="1.0" encoding="utf-8" ?>    
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Transport.Views.Registreren">
    <ContentPage.Content>

        <ScrollView>
        <StackLayout VerticalOptions="Center" Margin="30">


                <Label Text="Naam:" 
                   FontSize="Subtitle" 
                   TextColor="#029fd6"
                   Margin="0,30,0,0"/>
                <Entry x:Name="UserName_R"/>

                <Label Text="Email:" 
                   FontSize="Subtitle" 
                   TextColor="#029fd6"
                   Margin="0,30,0,0"/>
                    <Entry x:Name="Email_R"/>

                    <Label Text="Wachtwoord:" 
                   FontSize="Subtitle" 
                   TextColor="#029fd6"/>

                        <Entry IsPassword="True"
                   x:Name="Wachtwoord_R"/>

                        <Label Text="Wachtwoord Herhalen:" 
                   FontSize="Subtitle" 
                   TextColor="#029fd6"/>

                        <Entry IsPassword="True"
                   x:Name="Wachtwoord_R2"/>

                        <Button Text="Registreren" 
                    BackgroundColor="#029fd6" 
                    TextColor="#eeeff3"
                    Command="{Binding RegistrerenButton}"/>
        </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>